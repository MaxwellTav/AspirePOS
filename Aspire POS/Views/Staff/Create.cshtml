@model Aspire_POS.Models.UserModel

@{
    ViewData["Title"] = "Crear Personal";
}

<!DOCTYPE html>
<html lang="es">
<head>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Crear Nuevo Usuario</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input asp-for="Username" class="form-control" placeholder="Ingresa el usuario" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre Completo</label>
                            <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre completo" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Correo electrónico" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Ingresa la contraseña" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Rol</label>
                            <select asp-for="Roles" class="custom-select" required>
                                <option value="customer">Cliente</option>
                                <option value="subscriber">Suscriptor</option>
                                <option value="author">Autor</option>
                                <option value="contributor">Colaborador</option>
                                <option value="shop_manager">Gestor de la tienda</option>
                                <option value="editor">Editor</option>
                                <option value="administrator">Administrador</option>
                            </select>
                            <span asp-validation-for="Roles" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Crear Usuario
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <!-- ./wrapper -->
    <!-- /.Show Message Script -->
    <script>
        function ShowMessage(title, body, response, duration) {
            var type;
            switch (response) {
                case "Success":
                    type = "success";
                    break;
                case "Warning":
                    type = "warning";
                    break;
                case "Error":
                    type = "error";
                    break;
                case "Info":
                    type = "info";
                    break;
                default:
                    type = "info";
                    break;
            }

            toastr[type](body, title, {
                closeButton: true,
                progressBar: true,
                timeOut: duration,
                positionClass: "toast-top-right"
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            var toastrTitle = '@TempData["ToastrTitle"]';
            var toastrMessage = '@TempData["ToastrMessage"]';
            var toastrResponse = '@TempData["ToastrResponse"]';
            var toastrDuration = '@TempData["ToastrDuration"]';

            if (toastrMessage && toastrTitle && toastrResponse) {
                ShowMessage(toastrTitle, toastrMessage, toastrResponse, parseInt(toastrDuration) || 3000);
            }
        });
    </script>
</body>
</html>