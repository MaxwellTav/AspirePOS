@model StaffMainModel
@{
    ViewData["Title"] = "Personal";
}

<!DOCTYPE html>
<html lang="es">
<head>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <a href="@Url.Action("Create", "Staff")" class="btn btn-app bg-gradient-info">
                                <span class="badge bg-warning">Espacio Disponibles 2</span>
                                <i class="fas fa-plus"></i> Crear nuevo personal
                            </a>
                            <a class="btn btn-app bg-gradient-secondary">
                                @* <span class="badge bg-warning">Disponibles 3</span> *@
                                <i class="fas fa-th"></i> Personal actual: @(Model.Staff.Count)
                            </a>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Usuarios</h3>
                </div>
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Usuario</th>
                                <th>Rol</th>
                                <th>Ir a Wordpress</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Staff.Count > 0)
                            {
                                @foreach (var staff in Model.Staff)
                                {
                                    <tr>
                                        <td>@staff.Id</td>
                                        <td>@staff.Name</td>
                                        <td>@staff.Slug</td>
                                        <td>@staff.Roles[0]</td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Staff", new {id = staff.Id})" class="btn btn-outline-warning">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            @* <a href="@Url.Action("Delete", "Staff", new {id = staff.Id})" class="btn btn-outline-warning">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a> *@
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>No data...</td>
                                    <td>No data...</td>
                                    <td>No data...</td>
                                    <td>No data...</td>
                                    <td>
                                        <button class="btn btn-outline-warning">...</button>
                                        <button class="btn btn-outline-danger">...</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <!-- ./wrapper -->
</body>
</html>