@{
    ViewData["Title"] = "Configurar Claves";
}

<!DOCTYPE html>
<html lang="es">
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-warning">
            <div class="card-header text-center">
                <a class="h1"><b>Configurar </b>Keys</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Ingrese el Token de su Comercio</p>

                <form>
                    <div class="input-group mb-6">
                        <a class="form-control">Clave Cliente CK</a>
                        <input type="text" class="form-control" placeholder="ck_a1b2c3...">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <a class="form-control">Clave Secreta CS</a>
                        <input type="text" class="form-control" placeholder="cs_a1b2c3...">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <a class="form-control">Dirección o Sítio</a>
                        <input type="url" class="form-control" placeholder="Https://túsítio.hostingersite.com">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="social-auth-links text-center mt-2 mb-3">
                        <a href="@Url.Action("Index", "Login")" class="btn btn-block btn-success">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</body>
</html>
