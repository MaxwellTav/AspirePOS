@model Aspire_POS.Models.InventoryModel

@{
    ViewData["Title"] = "Inventario";
}

<!DOCTYPE html>
<html lang="es">
<head>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <a href="#" class="btn btn-app bg-gradient-info">
                                <span class="badge bg-warning">Espacio Disponibles 2</span>
                                <i class="fas fa-plus"></i> Crear nuevo artículo
                            </a>
                            <a class="btn btn-app bg-gradient-secondary">
                                <i class="fas fa-th"></i> Personal actual:
                            </a>
                        </div>
                    </div>
                </div>
            </section>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Inventario</h3>
                </div>
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Categoría</th>
                                <th>Imagen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Products.Count > 0)
                            {
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.Price.ToString("C")</td>
                                        <td>@(product.InStock ? "Sí" : "No")</td>
                                        <td>@(product.Categories.Count > 0 ? product.Categories[0].Name : "Sin categoría")</td>
                                        <td>
                                            <img src="@product.Images.FirstOrDefault()" alt="Imagen de @product.Name" width="50" />
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center">No hay productos en inventario</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
